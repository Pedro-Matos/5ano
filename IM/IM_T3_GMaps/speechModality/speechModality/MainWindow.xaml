<Window x:Class="speechModality.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:speechModality"
        mc:Ignorable="d"
        Title="Google Maps Gesture Interaction Feedback" Height="350" Width="450" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Viewbox Grid.Row="0" Stretch="Uniform">
            <Image Name="image1" Width="640" Height="480"/>
        </Viewbox>
        <TextBlock Grid.Row="1" Height="64" HorizontalAlignment="Center" Name="textBoxMessagesCenter" VerticalAlignment="Center" Text="DISCONNECTED" FontWeight="Bold" FontSize="24" Visibility="Collapsed" Foreground="Red" />
        <TextBlock Grid.Row="2" HorizontalAlignment="Left" Name="textBlockStatus" Text="Number of Detected Users = 0" VerticalAlignment="Center" FontWeight="Bold" FontSize="14" />
    </Grid>
</Window>
